<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  
  <!-- 1. 配置过滤器 -->
  <!-- 声明: 过滤器声明 -->
  <filter>
  	<!-- 定义过滤器的使用名(唯一) -->
  	<filter-name>encodingFilter</filter-name>
  	<!-- 配置过滤器对应的java文件, 全类名 -->
  	<filter-class>com.filter.EncodingFilter</filter-class>
  </filter>
  <!-- 使用: 过滤器映射 -->
  <filter-mapping>
  	<!-- 与声明中的使用名一致 -->
  	<filter-name>encodingFilter</filter-name>
  	<!-- 配置需要过滤的请求路径的格式:
  			常见:	1. 过滤所有: /*
  					2. 过滤带有特定后缀名的请求.
  						例如: *.do
  							  *.action
  	 -->
  	<url-pattern>/*</url-pattern>
  	<!-- <url-pattern>*.do</url-pattern> -->
  </filter-mapping>
  
  <!-- 登录状态过滤 -->
  <!-- <filter>
  	<filter-name>loginFilter</filter-name>
  	<filter-class>com.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping> -->
  
  <!-- 2.配置监听器 -->
  <!-- 在线人数监听 -->
  <listener>
  	<listener-class>com.listener.CountListener</listener-class>
  </listener>
  
  <!-- 3. 配置servlet -->
  <!-- 用户退出 -->
  <servlet>
  	<servlet-name>logoff</servlet-name>
  	<servlet-class>com.servlet.user.Logoff</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>logoff</servlet-name>
  	<url-pattern>/logoff</url-pattern>
  </servlet-mapping>
  <!-- 用户登录 -->
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.servlet.user.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  	<!-- <url-pattern>/login.do</url-pattern> -->
  </servlet-mapping>
  
  <!-- 4. 配置工程的默认访问页面 -->
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>